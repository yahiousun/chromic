{
  "manifest_version": 2,

  "name": "Chromic",
  "description": "a comic reader",
  "version": "0.1.0",
  "browser_action": {},
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inline.bundle.js", "content-scripts.bundle.js"]
    }
  ],

  "background": {
    "page": "background.html",
    "persistent": false
  },

  "sandbox": {
    "pages": ["sandbox.html"]
  },

  "permissions": [
    "storage",
    "alarms",
    "<all_urls>"
  ],

  "web_accessible_resources": ["index.html"],
  
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}